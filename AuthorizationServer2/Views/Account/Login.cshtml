@model LoginViewModel

<div class="page-header">
    <h1>Connexion</h1>
</div>

<partial name="_ValidationSummary" />

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <form asp-route="Login">
                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Username">Login</label>
                                <input class="form-control" placeholder="Login" asp-for="Username" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password">Mot de passe</label>
                                <input type="password" class="form-control" placeholder="Mot de passe" asp-for="Password" autocomplete="off">
                            </div>
                            <div class="form-group login-remember">
                                <label asp-for="RememberLogin">
                                    <input asp-for="RememberLogin">
                                    <strong>Se souvenir de moi</strong>
                                </label>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" name="button" value="login">Connexion</button>
                                <button class="btn btn-default" name="button" value="cancel">Annuler</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="text-center" style="padding:20px;">
                        <h3>Pas encore enregistré ?</h3>
                        <br />
                        <a asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-default">S'inscrire</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
